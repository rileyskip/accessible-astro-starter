<script>
  // Run initialization function
  function initThemeToggle() {
    const btn = document.getElementById('back-to-future-btn')
    const html = document.documentElement
    const isHomePage = window.location.pathname === '/'

    // If not on home page, force modern mode
    if (!isHomePage) {
      html.classList.add('modern-mode')
      html.classList.remove('retro-mode')
      return
    }

    // On home page: Check if retro mode is explicitly enabled (default is modern)
    const isRetroMode = localStorage.getItem('retro-mode') === 'true'

    if (isRetroMode) {
      html.classList.add('retro-mode')
      html.classList.remove('modern-mode')
    } else {
      html.classList.add('modern-mode')
      html.classList.remove('retro-mode')
    }

    // Only add event listener if button exists (home page only)
    if (btn) {
      // Remove any existing listeners by cloning the button
      const newBtn = btn.cloneNode(true) as HTMLElement
      if (btn.parentNode) {
        btn.parentNode.replaceChild(newBtn, btn)
      }

      newBtn.addEventListener('click', function () {
        if (html.classList.contains('retro-mode')) {
          // Switch to modern mode
          html.classList.remove('retro-mode')
          html.classList.add('modern-mode')
          localStorage.removeItem('retro-mode')

          // Update button text and icon
          const span = newBtn.querySelector('span')
          const svg = newBtn.querySelector('svg')
          if (span) span.textContent = 'Back to the 80s'
          if (svg) {
            svg.innerHTML =
              '<path d="M12 2v4M12 18v4M4.93 4.93l2.83 2.83M16.24 16.24l2.83 2.83M2 12h4M18 12h4M4.93 19.07l2.83-2.83M16.24 7.76l2.83-2.83" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>'
          }
        } else {
          // Switch to retro mode
          html.classList.remove('modern-mode')
          html.classList.add('retro-mode')
          localStorage.setItem('retro-mode', 'true')

          // Update button text and icon
          const span = newBtn.querySelector('span')
          const svg = newBtn.querySelector('svg')
          if (span) span.textContent = 'Back to the Future'
          if (svg) {
            svg.innerHTML =
              '<path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>'
          }
        }
      })
    }
  }

  // Run on initial load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initThemeToggle)
  } else {
    initThemeToggle()
  }

  // Re-run when navigating back to the page (for SPAs/view transitions)
  document.addEventListener('astro:page-load', initThemeToggle)
  document.addEventListener('astro:after-swap', initThemeToggle)

  // Mobile Menu Toggle - Following W3Schools pattern
  function initMobileMenu() {
    const menuToggle = document.getElementById('mobile-menu-toggle')
    const mobileMenu = document.getElementById('mobile-menu')
    const backdrop = document.getElementById('mobile-menu-backdrop')

    if (!menuToggle || !mobileMenu || !backdrop) return

    // Clone the button to remove old event listeners
    const newToggle = menuToggle.cloneNode(true) as HTMLElement
    if (menuToggle.parentNode) {
      menuToggle.parentNode.replaceChild(newToggle, menuToggle)
    }

    // Ensure menu and backdrop start closed
    mobileMenu.style.display = 'none'
    backdrop.style.display = 'none'

    // Toggle menu function - W3Schools pattern
    function toggleMenu() {
      if (!mobileMenu || !backdrop) return
      
      // Simple toggle between display none and block
      if (mobileMenu.style.display === 'block') {
        // Close menu
        mobileMenu.style.display = 'none'
        backdrop.style.display = 'none'
        newToggle.setAttribute('aria-expanded', 'false')
        newToggle.setAttribute('aria-label', 'Open mobile menu')
        newToggle.style.display = '' // Show hamburger button
        document.body.style.overflow = ''
      } else {
        // Open menu
        mobileMenu.style.display = 'block'
        backdrop.style.display = 'block'
        newToggle.setAttribute('aria-expanded', 'true')
        newToggle.setAttribute('aria-label', 'Close mobile menu')
        newToggle.style.display = 'none' // Hide hamburger button
        document.body.style.overflow = 'hidden'
      }
    }

    // Menu toggle click
    newToggle.addEventListener('click', toggleMenu)

    // Close button inside menu - clone to remove old listeners
    const closeButton = document.getElementById('mobile-menu-close')
    if (closeButton && closeButton.parentNode) {
      const newCloseButton = closeButton.cloneNode(true) as HTMLElement
      closeButton.parentNode.replaceChild(newCloseButton, closeButton)
      newCloseButton.addEventListener('click', (e) => {
        e.preventDefault()
        e.stopPropagation()
        toggleMenu()
      })
    }

    // Close menu when clicking backdrop
    backdrop.addEventListener('click', () => {
      if (mobileMenu.style.display === 'block') {
        toggleMenu()
      }
    })

    // Close menu when clicking a link
    const mobileNavLinks = document.querySelectorAll('.mobile-nav-link')
    mobileNavLinks.forEach(link => {
      link.addEventListener('click', () => {
        if (mobileMenu.style.display === 'block') {
          toggleMenu()
        }
      })
    })

    // Close menu on escape key
    const escapeHandler = (e: KeyboardEvent) => {
      if (e.key === 'Escape' && mobileMenu?.style.display === 'block') {
        toggleMenu()
      }
    }
    
    // Remove old escape handler if exists
    document.removeEventListener('keydown', escapeHandler)
    document.addEventListener('keydown', escapeHandler)

    // Handle retro modal in mobile menu
    const retroModalMobile = document.getElementById('open-retro-modal-mobile')
    if (retroModalMobile) {
      retroModalMobile.addEventListener('click', () => {
        if (mobileMenu.style.display === 'block') {
          toggleMenu()
        }
        // Trigger the main modal
        setTimeout(() => {
          const mainModalBtn = document.getElementById('open-retro-modal')
          if (mainModalBtn) {
            mainModalBtn.click()
          }
        }, 300) // Wait for menu to close
      })
    }
  }

  // Run mobile menu initialization
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initMobileMenu)
  } else {
    initMobileMenu()
  }

  // Re-run on view transitions
  document.addEventListener('astro:page-load', initMobileMenu)
  document.addEventListener('astro:after-swap', initMobileMenu)
</script>
