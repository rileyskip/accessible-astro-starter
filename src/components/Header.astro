---
import { Icon } from 'astro-icon/components'
import { SkipLink } from 'accessible-astro-components'
import RetroModal from '@components/RetroModal.astro'

// Check if we're on the home page
const isHomePage = Astro.url.pathname === '/'
---

<header class="site-header sticky top-0 z-50">
  <SkipLink />
  <div class="header-glow"></div>
  <div class="container">
    <div class="header-content flex items-center justify-between py-3 md:py-5">
      <a href="/" class="logo-link text-2xl font-bold">
        <span class="logo-bracket">&lt;</span>
        <span class="logo-text">Riley Skipper</span>
        <span class="logo-bracket">/&gt;</span>
      </a>
      
      <div class="flex items-center gap-2 sm:gap-3 buttons-container">
        <!-- Theme Toggle Button (visible on mobile on home page only) -->
        {isHomePage && (
          <button
            id="back-to-future-btn"
            class="back-to-future-btn"
            aria-label="Switch between retro and modern styling"
          >
            <Icon name="lucide:sun" class="h-5 w-5" />
            <span class="hidden lg:inline">Back to the 80s</span>
          </button>
        )}

        <!-- Hamburger Menu Button (mobile only) -->
        <button
          id="mobile-menu-toggle"
          class="mobile-menu-toggle md:hidden"
          aria-label="Open mobile menu"
          aria-expanded="false"
        >
          <Icon name="lucide:menu" class="h-6 w-6" />
        </button>

        <!-- Desktop Navigation -->
        <nav class="hidden md:block">
          <ul class="nav-menu flex items-center gap-2">
            <li>
              <a href="/" class="nav-link">Home</a>
            </li>
            <li>
              <a href="/about" class="nav-link">About</a>
            </li>
            <li>
              <a href="/portfolio/" class="nav-link">Portfolio</a>
            </li>
            <li>
              <a href="/contact" class="nav-link">Contact</a>
            </li>
            {isHomePage && (
              <>
                <li class="nav-divider"></li>
                <li>
                  <button
                    id="open-retro-modal"
                    class="info-button"
                    aria-label="Learn about 80s mode"
                    title="Learn about 80s mode"
                  >
                    <Icon name="lucide:info" class="h-5 w-5" />
                  </button>
                </li>
              </>
            )}
          </ul>
        </nav>
      </div>
    </div>
  </div>

  <!-- Mobile Menu Backdrop -->
  <div id="mobile-menu-backdrop" class="mobile-menu-backdrop"></div>

  <!-- Mobile Menu - Hidden by default -->
  <div id="mobile-menu" class="mobile-menu">
    <!-- Close Button -->
    <button
      id="mobile-menu-close"
      class="mobile-menu-close"
      aria-label="Close menu"
    >
      <Icon name="lucide:x" class="h-6 w-6" />
    </button>
    
    <!-- Navigation Links -->
    <nav id="mobile-nav-links">
      <ul class="mobile-nav-menu">
        <li>
          <a href="/" class="mobile-nav-link">Home</a>
        </li>
        <li>
          <a href="/about" class="mobile-nav-link">About</a>
        </li>
        <li>
          <a href="/portfolio/" class="mobile-nav-link">Portfolio</a>
        </li>
        <li>
          <a href="/contact" class="mobile-nav-link">Contact</a>
        </li>
        {isHomePage && (
          <li>
            <button
              id="open-retro-modal-mobile"
              class="mobile-nav-link w-full text-left"
              aria-label="Learn about 80s mode"
            >
              <Icon name="lucide:info" class="inline-block h-5 w-5 mr-2" />
              About 80s Mode
            </button>
          </li>
        )}
      </ul>
    </nav>
  </div>
</header>

<RetroModal />

<style lang="scss">
  /* Header Base Styles */
  .site-header {
    background: linear-gradient(180deg, rgba(0, 0, 0, 0.98) 0%, rgba(0, 0, 0, 0.95) 100%);
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    border-bottom: 2px solid transparent;
    border-image: linear-gradient(90deg, transparent, #60A5FA, transparent) 1;
    transition: all 0.3s ease;
    position: relative;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);

    @media (max-width: 640px) {
      .container {
        padding-left: 1rem;
        padding-right: 1rem;
      }
    }

    &::before {
      content: '';
      position: absolute;
      inset: 0;
      background: linear-gradient(90deg, transparent, rgba(96, 165, 250, 0.1), transparent);
      opacity: 0;
      transition: opacity 0.3s ease;
      pointer-events: none;
    }

    &:hover::before {
      opacity: 1;
    }
  }

  .header-glow {
    position: absolute;
    bottom: -2px;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(90deg, transparent, #60A5FA, #3B82F6, #60A5FA, transparent);
    animation: shimmer 3s ease-in-out infinite;
    box-shadow: 0 0 10px rgba(96, 165, 250, 0.5);
  }

  @keyframes shimmer {
    0%, 100% {
      opacity: 0.3;
      transform: translateX(-100%);
    }
    50% {
      opacity: 1;
      transform: translateX(100%);
    }
  }

  .header-content {
    position: relative;
    z-index: 10;
    max-width: 100%;
    overflow: visible;
  }

  .buttons-container {
    flex-shrink: 0;
    
    @media (max-width: 374px) {
      gap: 0.5rem !important; /* Tighter spacing on very small screens */
    }
  }

  .logo-link {
    transition: all 0.3s ease;
    color: white;
    text-decoration: none;
    font-weight: 700;
    flex-shrink: 1;
    min-width: 0; /* Allow text truncation if needed */

    @media (max-width: 374px) {
      font-size: 1.25rem !important; /* Smaller logo on very small screens */
    }
    letter-spacing: -0.02em;
    display: flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 1.25rem;

    @media (min-width: 768px) {
      font-size: 1.5rem;
    }

    &:hover {
      transform: translateY(-2px);
      
      .logo-text {
        background: linear-gradient(135deg, #60A5FA, #3B82F6, #2563EB);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }

      .logo-bracket {
        color: #60A5FA;
        animation: bracket-pulse 0.6s ease;
      }
    }
  }

  .logo-bracket {
    color: #60A5FA;
    font-weight: 900;
    font-size: 1.5rem;
    transition: all 0.3s ease;
  }

  .logo-text {
    transition: all 0.3s ease;
  }

  @keyframes bracket-pulse {
    0%, 100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.2);
    }
  }

  /* Navigation Menu Styles */
  .nav-menu {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-link {
    display: block;
    padding: 0.5rem 0.75rem;
    color: rgba(255, 255, 255, 0.85);
    text-decoration: none !important;
    font-weight: 600;
    font-size: 0.875rem;
    border-radius: 0.5rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;

    @media (min-width: 768px) {
      padding: 0.5rem 1rem;
      font-size: 1rem;
    }

    &::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      height: 0;
      background: linear-gradient(90deg, transparent, #60A5FA, #3B82F6, #60A5FA, transparent);
      transition: height 0.3s ease;
      box-shadow: 0 0 10px rgba(96, 165, 250, 0.6);
    }

    span {
      position: relative;
      z-index: 1;
    }

    &:hover {
      color: #60A5FA;
      transform: translateY(-2px) scale(1.05);
      text-shadow: 0 0 15px rgba(96, 165, 250, 0.8),
                   0 0 30px rgba(96, 165, 250, 0.4);
      animation: text-glow 0.6s ease-in-out;

      &::after {
        height: 3px;
        animation: underline-glow 0.6s ease-in-out infinite;
      }
    }
  }

  @keyframes text-glow {
    0%, 100% {
      text-shadow: 0 0 15px rgba(96, 165, 250, 0.8),
                   0 0 30px rgba(96, 165, 250, 0.4);
    }
    50% {
      text-shadow: 0 0 20px rgba(96, 165, 250, 1),
                   0 0 40px rgba(96, 165, 250, 0.6);
    }
  }

  @keyframes underline-glow {
    0%, 100% {
      box-shadow: 0 0 10px rgba(96, 165, 250, 0.6);
    }
    50% {
      box-shadow: 0 0 20px rgba(96, 165, 250, 1);
    }
  }

  .nav-icon-link {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem;
    color: rgba(255, 255, 255, 0.85);
    border-radius: 0.5rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    border: 1px solid transparent;

    &::before {
      content: '';
      position: absolute;
      inset: 0;
      border-radius: 0.5rem;
      background: linear-gradient(135deg, #60A5FA, #3B82F6);
      opacity: 0;
      transition: opacity 0.3s ease;
    }

    svg {
      position: relative;
      z-index: 1;
      transition: all 0.3s ease;
    }

    &:hover {
      color: white;
      transform: translateY(-3px) rotate(5deg);
      border-color: #60A5FA;
      box-shadow: 0 4px 15px rgba(96, 165, 250, 0.4);

      &::before {
        opacity: 0.15;
      }

      svg {
        transform: scale(1.1);
        filter: drop-shadow(0 0 8px rgba(96, 165, 250, 0.8));
      }
    }
  }

  .nav-divider {
    width: 2px;
    height: 1.5rem;
    background: linear-gradient(180deg, transparent, #60A5FA, transparent);
    margin: 0 0.5rem;
    border-radius: 1px;
    box-shadow: 0 0 8px rgba(96, 165, 250, 0.3);
  }

  /* Theme Toggle Button */
  .back-to-future-btn {
    display: flex;
    position: relative;
    align-items: center;
    gap: 0.5rem;
    min-height: 44px; /* Minimum touch target size */
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
    border: 2px solid transparent;
    border-radius: 0.75rem;
    background: linear-gradient(135deg, #3B82F6, #2563EB);
    padding: 0.625rem 1.25rem;
    overflow: hidden;
    color: white;
    font-family: var(--font-body);
    font-weight: 700;
    font-size: 0.875rem;
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3), inset 0 1px 0 rgba(255, 255, 255, 0.1);
    flex-shrink: 0; /* Prevent shrinking on small screens */

    /* Ensure icon is white */
    svg {
      color: white;
    }

    @media (max-width: 374px) {
      padding: 0.5rem 0.875rem;
      font-size: 0.8125rem;
      gap: 0.375rem;
    }

    &::before {
      content: '';
      position: absolute;
      inset: 0;
      background: linear-gradient(135deg, #60A5FA, #3B82F6);
      opacity: 0;
      transition: opacity 0.3s ease;
    }

    &::after {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      width: 100px;
      height: 100px;
      background: radial-gradient(circle, rgba(255, 255, 255, 0.3), transparent);
      transform: translate(-50%, -50%) scale(0);
      transition: transform 0.5s ease;
      border-radius: 50%;
    }
  }

  .back-to-future-btn > * {
    position: relative;
    z-index: 1;
  }

  .back-to-future-btn:hover {
    transform: translateY(-3px) scale(1.02);
    box-shadow: 0 8px 25px rgba(59, 130, 246, 0.5), 
                0 0 20px rgba(96, 165, 250, 0.3),
                inset 0 1px 0 rgba(255, 255, 255, 0.2);
    border-color: #60A5FA;

    &::before {
      opacity: 1;
    }

    &::after {
      transform: translate(-50%, -50%) scale(1);
    }
  }

  .back-to-future-btn:active {
    transform: translateY(-1px) scale(0.98);
  }

  /* Retro Mode Header Styles */
  .retro-mode .site-header {
    background: rgba(0, 0, 0, 0.98);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-bottom: 2px solid var(--terminal-cyan);
    box-shadow: 0 0 20px rgba(0, 255, 255, 0.3);
  }

  .retro-mode .logo-link {
    color: var(--terminal-cyan);
    text-shadow: 0 0 10px rgba(0, 255, 255, 0.5);
    font-family: 'Courier New', 'Lucida Console', monospace;

    &:hover {
      color: var(--terminal-pink);
      text-shadow: 0 0 15px rgba(255, 20, 147, 0.8);
      transform: translateY(-1px);
    }
  }

  .retro-mode .nav-link {
    color: var(--terminal-cyan);
    font-family: 'Courier New', 'Lucida Console', monospace;
    border: 1px solid transparent;

    &::before {
      content: '[ ';
      opacity: 0;
      transition: opacity 0.2s ease;
    }

    &::after {
      content: ' ]';
      opacity: 0;
      transition: opacity 0.2s ease;
      background: none;
      position: static;
      width: auto;
      height: auto;
    }

    &:hover {
      color: var(--terminal-pink);
      background: rgba(0, 255, 255, 0.1);
      border-color: var(--terminal-cyan);
      text-shadow: 0 0 8px rgba(0, 255, 255, 0.6);

      &::before,
      &::after {
        opacity: 1;
      }
    }
  }

  .retro-mode .nav-icon-link {
    color: var(--terminal-cyan);
    border: 1px solid transparent;

    &:hover {
      color: var(--terminal-pink);
      background: rgba(0, 255, 255, 0.1);
      border-color: var(--terminal-cyan);
      box-shadow: 0 0 15px rgba(0, 255, 255, 0.4);
    }
  }

  .retro-mode .nav-divider {
    background: var(--terminal-cyan);
    box-shadow: 0 0 5px rgba(0, 255, 255, 0.5);
  }

  .retro-mode .back-to-future-btn {
    border: 2px solid #4169E1;
    background: #1E3A8A;
    color: #60A5FA;
    font-family: 'Courier New', 'Lucida Console', monospace;
    box-shadow: 0 0 15px rgba(65, 105, 225, 0.5);

    /* Ensure icon is white in retro mode */
    svg {
      color: white;
    }

    &::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-image: var(--grain-primary);
      background-size: 100px 100px;
      opacity: 0.2;
      pointer-events: none;
      z-index: 0;
    }

    &:hover {
      background: #4169E1;
      color: white;
      border-color: #60A5FA;
      box-shadow: 0 0 25px rgba(65, 105, 225, 0.8);
      transform: translateY(-2px);

      svg {
        color: white;
      }
    }
  }

  /* Modern Mode Header Styles */
  .modern-mode .site-header {
    background: rgba(0, 0, 0, 0.95);
  }

  .modern-mode .back-to-future-btn {
    box-shadow: 0 2px 8px rgba(59, 130, 246, 0.3);
  }

  /* Info Button Styles */
  .info-button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    min-width: 44px; /* Minimum touch target */
    min-height: 44px; /* Minimum touch target */
    padding: 0.5rem;
    border: 2px solid #60A5FA;
    border-radius: 50%;
    background: transparent;
    color: #60A5FA;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    flex-shrink: 0;
    position: relative;
    box-shadow: 0 0 0 0 rgba(96, 165, 250, 0.4);
    animation: info-pulse 2s ease-in-out infinite;

    &::before {
      content: '';
      position: absolute;
      inset: -4px;
      border-radius: 50%;
      background: linear-gradient(135deg, #60A5FA, #3B82F6);
      opacity: 0;
      transition: opacity 0.3s ease;
      z-index: 0;
    }

    svg {
      position: relative;
      z-index: 1;
      transition: all 0.3s ease;
    }

    &:hover {
      background: linear-gradient(135deg, #3B82F6, #2563EB);
      color: white;
      transform: translateY(-3px) scale(1.15) rotate(15deg);
      box-shadow: 0 6px 20px rgba(59, 130, 246, 0.6),
                  0 0 30px rgba(96, 165, 250, 0.4);
      border-color: white;
      animation: none;

      &::before {
        opacity: 0.2;
      }

      svg {
        transform: rotate(-15deg);
        filter: drop-shadow(0 0 8px rgba(255, 255, 255, 0.8));
      }
    }

    &:focus-visible {
      outline: 2px solid #3B82F6;
      outline-offset: 3px;
    }

    &:active {
      transform: translateY(-1px) scale(1.05);
    }
  }

  @keyframes info-pulse {
    0%, 100% {
      box-shadow: 0 0 0 0 rgba(96, 165, 250, 0.4);
    }
    50% {
      box-shadow: 0 0 0 6px rgba(96, 165, 250, 0);
    }
  }

  /* Mobile Menu Toggle Button */
  .mobile-menu-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 44px; /* Minimum touch target size */
    min-height: 44px; /* Minimum touch target size */
    padding: 0.625rem;
    color: white;
    background: transparent;
    border: 2px solid #60A5FA;
    border-radius: 0.5rem;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    z-index: 110;
    flex-shrink: 0; /* Prevent shrinking on small screens */

    /* Hide on desktop screens (md: 768px and up) */
    @media (min-width: 768px) {
      display: none !important;
    }

    &:hover {
      background: rgba(96, 165, 250, 0.1);
      border-color: #60A5FA;
      transform: scale(1.05);
    }

    &:focus-visible {
      outline: 2px solid #3B82F6;
      outline-offset: 2px;
    }

    &:active {
      transform: scale(0.95);
    }

    svg {
      transition: all 0.3s ease;
      flex-shrink: 0;
    }
  }

  /* Mobile Menu Backdrop - Simple overlay */
  .mobile-menu-backdrop {
    display: none; /* Hidden by default */
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.7);
    backdrop-filter: blur(4px);
    -webkit-backdrop-filter: blur(4px);
    z-index: 99;

    /* Hide on desktop screens */
    @media (min-width: 768px) {
      display: none !important;
    }
  }

  /* Mobile Menu - Following W3Schools pattern */
  .mobile-menu {
    display: none; /* Hidden by default */
    position: fixed;
    top: 0;
    right: 0;
    width: 85%;
    max-width: 320px;
    height: 100vh;
    height: 100dvh; /* Dynamic viewport height for mobile browsers */
    background: linear-gradient(180deg, rgba(0, 0, 0, 0.98) 0%, rgba(0, 0, 0, 0.95) 100%);
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    box-shadow: -4px 0 20px rgba(0, 0, 0, 0.5);
    z-index: 100;
    padding-top: max(5rem, env(safe-area-inset-top, 5rem)); /* Respect safe areas */
    padding-bottom: env(safe-area-inset-bottom, 0); /* Respect bottom safe area */
    overflow-y: auto;
    overflow-x: hidden;
    -webkit-overflow-scrolling: touch; /* Smooth scrolling on iOS */
    overscroll-behavior: contain; /* Prevent scroll chaining */

    /* Hide on desktop screens (md: 768px and up) */
    @media (min-width: 768px) {
      display: none !important;
    }

    &::before {
      content: '';
      position: absolute;
      inset: 0;
      background: linear-gradient(180deg, rgba(96, 165, 250, 0.05), transparent);
      pointer-events: none;
    }

    @media (max-width: 374px) {
      width: 90%; /* Slightly narrower on very small screens */
    }
  }

  /* Mobile Menu Close Button */
  .mobile-menu-close {
    position: absolute;
    top: 1rem;
    right: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background: rgba(96, 165, 250, 0.1);
    border: 2px solid rgba(96, 165, 250, 0.3);
    border-radius: 0.5rem;
    color: white;
    cursor: pointer;
    transition: all 0.3s ease;
    z-index: 101;

    &:hover {
      background: rgba(96, 165, 250, 0.2);
      border-color: #60A5FA;
      transform: rotate(90deg) scale(1.1);
    }

    &:active {
      transform: rotate(90deg) scale(0.95);
    }

    &:focus-visible {
      outline: 2px solid #3B82F6;
      outline-offset: 2px;
    }
  }

  .mobile-nav-menu {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
  }

  .mobile-nav-link {
    display: flex;
    align-items: center;
    min-height: 56px; /* Comfortable touch target */
    padding: 1rem 1.5rem;
    color: rgba(255, 255, 255, 0.9);
    text-decoration: none;
    font-weight: 600;
    font-size: 1.125rem;
    line-height: 1.5;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    background: transparent;
    border-left: 3px solid transparent;
    cursor: pointer;
    -webkit-tap-highlight-color: rgba(96, 165, 250, 0.2);

    &:hover {
      background: rgba(96, 165, 250, 0.1);
      border-left-color: #60A5FA;
      color: #60A5FA;
      padding-left: 2rem;
    }

    &:active {
      background: rgba(96, 165, 250, 0.2);
      transform: scale(0.98);
    }

    &:focus-visible {
      outline: 2px solid #3B82F6;
      outline-offset: -2px;
    }
  }

  /* Mobile Menu Overlay */
  .mobile-menu-overlay {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(2px);
    -webkit-backdrop-filter: blur(2px);
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
    z-index: 40;

    &.open {
      opacity: 1;
      visibility: visible;
    }
  }

  /* Retro Mode Mobile Menu */
  .retro-mode .mobile-menu-backdrop {
    background: rgba(0, 0, 0, 0.85);
    backdrop-filter: blur(6px);
  }

  .retro-mode .mobile-menu {
    border-left: 2px solid var(--terminal-cyan);
    box-shadow: -4px 0 20px rgba(0, 255, 255, 0.3);
  }

  .retro-mode .mobile-menu-close {
    background: rgba(0, 255, 255, 0.1);
    border-color: var(--terminal-cyan);
    color: var(--terminal-cyan);

    &:hover {
      background: rgba(0, 255, 255, 0.2);
      border-color: var(--terminal-pink);
