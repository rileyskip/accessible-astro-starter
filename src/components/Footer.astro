---
import CallToAction from './CallToAction.astro'
import ExternalLink from './ExternalLink.astro'
import Logo from './Logo.astro'
import { Icon } from 'astro-icon/components'

/**
 * Footer Component
 *
 * @description A component that displays the footer of the website
 */
const currentYear = new Date().getFullYear()
---

<footer>
  <CallToAction />
  <section class="py-20">
    <h2 class="sr-only">Footer</h2>
    <div class="container grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-4">
      <div class="flex flex-col gap-4">
        <h3 class="text-2xl font-bold">Navigation</h3>
        <ul class="flex flex-col gap-2">
          <li><a href="/">Home</a></li>
          <li><a href="/about">About</a></li>
          <li><a href="/portfolio">Portfolio</a></li>
          <li><a href="/blog">Blog</a></li>
          <li><a href="/contact">Contact</a></li>
        </ul>
      </div>
      <div class="flex flex-col gap-4">
        <h3 class="text-2xl font-bold">Services</h3>
        <ul class="flex flex-col gap-2">
          <li><a href="/portfolio">Web Development</a></li>
          <li><a href="/portfolio">Accessibility Audits</a></li>
          <li><a href="/portfolio">UI/UX Design</a></li>
          <li><a href="/portfolio">Performance Optimization</a></li>
          <li><a href="/contact">Consultation</a></li>
        </ul>
      </div>
      <div class="flex flex-col gap-4">
        <h3 class="text-2xl font-bold">Resources</h3>
        <ul class="flex flex-col gap-2">
          <li>
            <ExternalLink href="https://www.w3.org/WAI/WCAG21/quickref/">WCAG Quick Reference</ExternalLink>
          </li>
          <li>
            <ExternalLink href="https://web.dev/articles/focus">Focus Management Guide</ExternalLink>
          </li>
          <li>
            <ExternalLink href="https://developer.mozilla.org/en-US/docs/Learn/Accessibility/HTML">Semantic HTML</ExternalLink>
          </li>
          <li>
            <ExternalLink href="https://www.tpgi.com/screen-reader-user-survey-results/">Screen Reader Survey</ExternalLink>
          </li>
        </ul>
      </div>
      <div class="flex flex-col gap-4">
        <div class="flex items-center gap-2">
          <Logo loading="lazy" />
          <span class="text-xl font-bold">Riley Skipper</span>
        </div>
        <p class="leading-[1.75]">
          Creating accessible, beautiful websites that work for everyone. 
          Let's build something amazing together.
        </p>
        <div class="flex gap-4">
          <a href="https://github.com/rileyskipper" class="text-muted hover:text-primary">
            <Icon name="lucide:github" class="h-5 w-5" />
            <span class="sr-only">GitHub</span>
          </a>
          <a href="https://linkedin.com/in/ryskipper" class="text-muted hover:text-primary">
            <Icon name="lucide:linkedin" class="h-5 w-5" />
            <span class="sr-only">LinkedIn</span>
          </a>
        </div>
      </div>
    </div>
  </section>
  <section class="py-8">
    <div class="container flex flex-col gap-4 md:flex-row md:justify-between">
      <p>
        &copy; {currentYear} Riley Skipper. All rights reserved.
      </p>
      <p>
        Built with ❤️ and accessibility in mind using <a href="https://astro.build/">Astro</a>.
      </p>
    </div>
  </section>
</footer>

<style>
  section {
    border-top: 1px solid var(--border-color-subtle);
  }
</style>
