---
import DefaultLayout from '@layouts/DefaultLayout.astro'
import PageHeader from '@components/PageHeader.astro'
import { Card, Pagination } from 'accessible-astro-components'
import { getCollection } from 'astro:content'
import type { GetStaticPaths, Page } from 'astro'
import type { CollectionEntry } from 'astro:content'

// Import images directly for optimization
import projectImage1 from '@assets/images/projects/project-image-1.png'
import projectImage2 from '@assets/images/projects/project-image-2.png'
import projectImage3 from '@assets/images/projects/project-image-3.png'
import projectImage4 from '@assets/images/projects/project-image-4.png'

export const getStaticPaths = (async ({ paginate }) => {
  const projects = await getCollection('projects')

  const projectImages = [projectImage1, projectImage2, projectImage3, projectImage4]

  const projectsWithImages = projects.map((project, index) => {
    return {
      ...project,
      featuredImage: projectImages[index % projectImages.length],
    }
  })

  return paginate(projectsWithImages, { pageSize: 6 })
}) satisfies GetStaticPaths

interface Props {
  page: Page<CollectionEntry<'projects'> & { featuredImage: any }>
}

const { page } = Astro.props

// Organize projects into sections
const uxProjects = page.data.filter(
  (project) => project.data.title === 'Cruise Booking App' || project.data.title === 'Dreamvision',
)

const developmentProjects = page.data.filter(
  (project) => project.data.title === 'Expensely' || project.data.title === 'Drupal CMS Development',
)
---

<DefaultLayout
  title="Portfolio"
  description="A showcase of UX design and development projects, demonstrating skills in design, prototyping, and full-stack development."
>
  <PageHeader
    title="Portfolio"
    subtitle="A showcase of UX design and development projects, demonstrating skills in design, prototyping, and full-stack development."
    bgType="bordered"
  />

  <section class="my-12">
    <div class="container">
      <!-- UX Design Section -->
      <div class="mb-16">
        <h2 class="mb-8 text-4xl font-bold">UX Design</h2>
        <p class="text-muted mb-8 text-lg">
          Creative design projects showcasing user experience design, prototyping, and visual storytelling.
        </p>
        <ul class="grid grid-cols-1 gap-6 md:grid-cols-2">
          {
            uxProjects.map((project) => (
              <li>
                <Card
                  imageComponent={project.featuredImage}
                  url={'/portfolio/' + project.id}
                  title={project.data.title}
                  footer={'Author: ' + project.data.author}
                >
                  {project.data.description}
                </Card>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Development Section -->
      <div class="mb-16">
        <h2 class="mb-8 text-4xl font-bold">Development</h2>
        <p class="text-muted mb-8 text-lg">
          Full-stack development projects demonstrating React, TypeScript, and Drupal CMS expertise.
        </p>
        <ul class="grid grid-cols-1 gap-6 md:grid-cols-2">
          {
            developmentProjects.map((project) => (
              <li>
                <Card
                  imageComponent={project.featuredImage}
                  url={'/portfolio/' + project.id}
                  title={project.data.title}
                  footer={'Author: ' + project.data.author}
                >
                  {project.data.description}
                </Card>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Pagination -->
      <div class="mt-12 grid place-content-center">
        <Pagination
          firstPage={page.url.prev ? '/portfolio' : null}
          previousPage={page.url.prev ? page.url.prev : null}
          nextPage={page.url.next ? page.url.next : null}
          lastPage={page.url.next ? `/portfolio/${Math.ceil(page.total / page.size)}` : null}
          currentPage={`${page.currentPage}`}
          totalPages={`${Math.ceil(page.total / page.size)}`}
          ariaLabel="Portfolio pagination"
        />
      </div>
    </div>
  </section>
</DefaultLayout>

<style lang="scss" is:global>
  @use '../../assets/scss/base/mixins' as *;

  .card {
    h3 {
      margin-block-end: var(--space-xs);
      line-height: 0.75;
    }

    a {
      @include text-decoration(transparent, var(--foreground-color), 4px, 2px);
    }
  }
</style>
