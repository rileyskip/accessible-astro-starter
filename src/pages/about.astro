---
import DefaultLayout from '@layouts/DefaultLayout.astro'
import ScrollReveal from '@components/ScrollReveal.astro'
import PrintMark from '@components/PrintMark.astro'
import ParallaxBackground from '@components/ParallaxBackground.astro'
import { Image } from 'astro:assets'
import { Icon } from 'astro-icon/components'
import { Avatar, AvatarGroup } from 'accessible-astro-components'
---

<DefaultLayout title="About Riley Skipper - Web Developer">
  <!-- Hero Section - Asymmetric Layout -->
  <section class="section-editorial section-parallax my-24 lg:my-32">
    <ParallaxBackground variant="blob" color="blue" position="top-right" size="lg" speed={0.5} />
    <ParallaxBackground variant="gradient" color="purple" position="bottom-left" size="md" speed={0.3} />
    
    <div class="container-wide relative z-10">
      <div class="grid grid-cols-1 gap-16 lg:grid-cols-12 lg:gap-24">
        <ScrollReveal direction="up" class="lg:col-span-6 lg:col-start-2">
          <div class="relative flex flex-col gap-8">
            <PrintMark position="top-left" size="lg" />
            <h1 class="editorial-title">
              <span class="block">About</span>
              <span class="block offset-text">Me</span>
            </h1>
            <p class="text-xl opacity-80 lg:text-2xl">
              I'm Riley Skipper, a Web Developer and UX/UI Researcher who believes that great websites should be
              accessible to everyone. I combine modern development practices with a deep commitment to inclusive design
              and user experience.
            </p>
            <div class="flex flex-col gap-4 min-[500px]:flex-row">
              <a class="button has-icon" href="/portfolio/">
                <Icon name="lucide:briefcase" />
                View My Work
              </a>
              <a class="button has-icon color-secondary" href="/contact">
                <Icon name="lucide:mail" />
                Get in Touch
              </a>
            </div>
          </div>
        </ScrollReveal>
        
        <ScrollReveal direction="left" delay={200} class="lg:col-span-4">
          <div class="relative flex items-center justify-center lg:justify-end">
            <PrintMark position="bottom-right" size="md" />
           
          </div>
        </ScrollReveal>
      </div>
    </div>
  </section>

  <!-- Experience & Education - Disjointed Layout -->
  <section class="section-editorial section-parallax my-64 lg:my-96">
    <ParallaxBackground variant="dots" color="cyan" position="top-left" size="xl" speed={0.4} />
    <ParallaxBackground variant="circle" color="pink" position="bottom-right" size="lg" speed={0.3} />
    
    <div class="container-wide relative z-10">
      <ScrollReveal direction="fade">
        <h2 class="editorial-title mb-24 text-center">
          <span class="block">Experience &</span>
          <span class="block offset-text">Education</span>
        </h2>
      </ScrollReveal>
      
      <div class="grid grid-cols-1 gap-24 lg:grid-cols-12 lg:gap-16">
        <ScrollReveal direction="right" class="lg:col-span-6">
          <div class="relative">
            <PrintMark position="top-left" size="sm" />
            <h3 class="mb-12 text-4xl font-bold">Professional Experience</h3>
            <div class="space-y-12">
              <div class="experience-card border-primary border-l-4 pl-6 transition-all duration-300 hover:pl-8">
                <h4 class="text-2xl font-bold">Web Developer</h4>
                <p class="text-muted mb-4 text-lg">Rutgers University • May 2022 - Current</p>
                <ul class="space-y-2 opacity-80">
                  <li>• Designing and deploying dynamic pages, templates, and components using Drupal CMS</li>
                  <li>• Wireframing, designing, and prototyping user-centric interfaces for new products to improve overall usability</li>
                  <li>• Accessibility website management in compliance with standards of WCAG 2</li>
                  <li>• Diagnosing and resolving bugs, and QA testing within a local server environment</li>
                  <li>• Co-developer for new application products using Next.Js framework</li>
                </ul>
              </div>
              <div class="experience-card border-secondary border-l-4 pl-6 transition-all duration-300 hover:pl-8">
                <h4 class="text-2xl font-bold">Junior Web Developer</h4>
                <p class="text-muted mb-4 text-lg">Legal Associations Management • Aug 2021 - May 2022</p>
                <ul class="space-y-2 opacity-80">
                  <li>• WordPress based developing and maintaining law firm associations around the U.S.</li>
                  <li>• Assisting in setting up algorithms and data structures using Wordpress' Oxygen and jQuery</li>
                  <li>• Designing mockups and prototyping with Figma, and key member to check for QA</li>
                  <li>• Collaboration with clients and marketing to establish design needs</li>
                  <li>• Monthly SEO management and improvements using tools such as Moz Pro and Alexa</li>
                </ul>
              </div>
              <div class="experience-card border-accent border-l-4 pl-6 transition-all duration-300 hover:pl-8">
                <h4 class="text-2xl font-bold">Search Engine Optimization Consultant</h4>
                <p class="text-muted mb-4 text-lg">Philadelphia Printworks · Freelance • Jan 2021 - Mar 2021</p>
                <ul class="space-y-2 opacity-80">
                  <li>• Monitoring interaction trends through reporting and implementing SEO strategies</li>
                  <li>• Validating errors using Google Analytics and Lighthouse</li>
                  <li>• Debugging code on Shopify CMS platform</li>
                  <li>• Digital copywriting</li>
                </ul>
              </div>
              <div class="experience-card border-primary border-l-4 pl-6 transition-all duration-300 hover:pl-8">
                <h4 class="text-2xl font-bold">Freelance Web Designer and Developer</h4>
                <p class="text-muted mb-4 text-lg">Eclipse Inspection & Property Services · Freelance • Jun 2020 - Sep 2020</p>
                <ul class="space-y-2 opacity-80">
                  <li>• Client collaboration on building a brand identity for an inspection business, complete with color scheme, logo, font, and website layout and architecture</li>
                  <li>• Design and deployment using a CMS, built to handoff and maintainable by client</li>
                  <li>• Implementation of SEO using Google Analytics</li>
                </ul>
              </div>
              <div class="experience-card border-accent border-l-4 pl-6 transition-all duration-300 hover:pl-8">
                <h4 class="text-2xl font-bold">UX/UI Intern</h4>
                <p class="text-muted mb-4 text-lg">Philadelphia Printworks • Apr 2019 - Oct 2019</p>
                <ul class="space-y-2 opacity-80">
                  <li>• Quarterly consultant through reporting and implementing SEO strategies</li>
                  <li>• Validating errors using Google Analytics and Lighthouse</li>
                  <li>• Assistance in development using Shopify CMS</li>
                  <li>• Digital copywriting</li>
                  <li>• Collaborative redesign of web navigation for improved UX</li>
                </ul>
              </div>
            </div>
          </div>
        </ScrollReveal>
        
        <ScrollReveal direction="left" delay={200} class="lg:col-span-6">
          <div class="relative">
            <PrintMark position="top-right" size="sm" />
            <h3 class="mb-12 text-4xl font-bold">Education & Certifications</h3>
            <div class="space-y-8">
              <div class="bg-card rounded-2xl p-8 transition-all duration-300 hover:shadow-2xl hover:-translate-y-2">
                <h4 class="text-2xl font-bold">Internet & Web Development B.S.</h4>
                <p class="text-muted mb-4 text-lg">Arizona State University • 2017-2019</p>
                <ul class="space-y-2 opacity-80">
                  <li>• Dean's List 2017 & 2019</li>
                </ul>
              </div>
              <div class="bg-card rounded-2xl p-8 transition-all duration-300 hover:shadow-2xl hover:-translate-y-2">
                <h4 class="text-2xl font-bold">Web Design A.A.S.</h4>
                <p class="text-muted mb-4 text-lg">Camden County College • 2015-2017</p>
              </div>
              <div class="bg-card rounded-2xl p-8 transition-all duration-300 hover:shadow-2xl hover:-translate-y-2">
                <h4 class="text-2xl font-bold">Professional Development</h4>
                <p class="text-muted mb-4 text-lg">Conferences & Workshops</p>
                <ul class="space-y-2 opacity-80">
                  <li>• FigCon 2024 Attendee</li>
                  <li>• Drupal NJ Camp 2022 Attendee</li>
                </ul>
              </div>
            </div>
          </div>
        </ScrollReveal>
      </div>
    </div>
  </section>

  <!-- Hobbies Section - Grid Layout -->
  <section class="section-editorial section-parallax my-64 lg:my-96">
    <ParallaxBackground variant="blob" color="green" position="top-right" size="lg" speed={0.5} />
    <ParallaxBackground variant="grid" color="blue" position="bottom-left" size="xl" speed={0.3} />
    
    <div class="container-wide relative z-10">
      <ScrollReveal direction="fade">
        <div class="relative mb-32">
          <PrintMark position="top-left" size="md" />
          <h2 class="editorial-title">
            <span class="block">Activities</span>
            <span class="block offset-text text-8xl">When I'm Not Coding...</span>
          </h2>
        </div>
      </ScrollReveal>
      
      <div class="hobbies-list">
        <ScrollReveal direction="up" delay={100}>
          <h3 class="hobby-text hobby-camping">Camping</h3>
        </ScrollReveal>
        
        <ScrollReveal direction="up" delay={200}>
          <h3 class="hobby-text hobby-kayaking">Kayaking</h3>
        </ScrollReveal>
        
        <ScrollReveal direction="up" delay={300}>
          <h3 class="hobby-text hobby-billiards">Billiards</h3>
        </ScrollReveal>
        
        <ScrollReveal direction="up" delay={400}>
          <h3 class="hobby-text hobby-horror">Horror Movies</h3>
        </ScrollReveal>
      </div>
    </div>
  </section>

</DefaultLayout>

<style lang="scss">
  /* Editorial Design Styles */
  .section-editorial {
    position: relative;
  }

  .section-parallax {
    position: relative;
    overflow: hidden;
    isolation: isolate;
  }

  .container-wide {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;

    @media (max-width: 768px) {
      padding: 0 1.5rem;
    }
  }

  .editorial-title {
    font-size: clamp(3rem, 10vw, 8rem);
    font-weight: 800;
    line-height: 0.9;
    letter-spacing: -0.03em;
    
    .offset-text {
      padding-left: clamp(2rem, 8vw, 8rem);
      font-weight: 300;
    }
  }

  .experience-card {
    &:hover {
      border-width: 6px;
    }
  }

  /* Hobbies List Layout */
  .hobbies-list {
    display: flex;
    flex-direction: column;
    gap: 3rem;
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 0;

    @media (max-width: 768px) {
      gap: 2rem;
    }
  }

  .hobby-text {
    font-size: clamp(4rem, 10vw, 8rem);
    font-weight: 900;
    margin: 0;
    line-height: 1.1;
    letter-spacing: -0.03em;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;

    &:hover {
      transform: translateX(20px) scale(1.05);
      filter: brightness(1.2);
    }

    @media (max-width: 768px) {
      font-size: clamp(3rem, 10vw, 5rem);
    }
  }

  /* Individual Hobby Colors */
  .hobby-camping {
    color: #10B981;
    text-shadow: 0 4px 20px rgba(16, 185, 129, 0.4);

    &:hover {
      text-shadow: 0 8px 40px rgba(16, 185, 129, 0.6);
    }
  }

  .hobby-kayaking {
    color: #3B82F6;
    text-shadow: 0 4px 20px rgba(59, 130, 246, 0.4);

    &:hover {
      text-shadow: 0 8px 40px rgba(59, 130, 246, 0.6);
    }
  }

  .hobby-billiards {
    color: #8B5CF6;
    text-shadow: 0 4px 20px rgba(139, 92, 246, 0.4);

    &:hover {
      text-shadow: 0 8px 40px rgba(139, 92, 246, 0.6);
    }
  }

  .hobby-horror {
    color: #EF4444;
    text-shadow: 0 4px 20px rgba(239, 68, 68, 0.4);

    &:hover {
      text-shadow: 0 8px 40px rgba(239, 68, 68, 0.6);
    }
  }

  /* Smooth scroll behavior */
  :global(html) {
    scroll-behavior: smooth;
  }

  /* Retro mode adjustments */
  :global(.retro-mode) {
    .editorial-title {
      color: var(--terminal-cyan);
      text-shadow: 0 0 20px rgba(0, 255, 255, 0.3);
    }

    .experience-card {
      &:hover {
        background: rgba(0, 255, 255, 0.05);
      }
    }

    .bg-card {
      background: rgba(0, 255, 255, 0.05);
      border: 1px solid var(--terminal-cyan);
      
      &:hover {
        background: rgba(0, 255, 255, 0.1);
        box-shadow: 0 25px 50px rgba(0, 255, 255, 0.2);
      }
    }

    /* Retro Hobbies */
    .hobby-camping {
      background: linear-gradient(135deg, rgba(0, 255, 255, 0.2) 0%, rgba(0, 255, 255, 0.1) 100%);
      border: 2px solid var(--terminal-cyan);
      box-shadow: 0 10px 40px rgba(0, 255, 255, 0.3);

      &:hover {
        box-shadow: 0 20px 60px rgba(0, 255, 255, 0.5);
        background: linear-gradient(135deg, rgba(0, 255, 255, 0.3) 0%, rgba(0, 255, 255, 0.2) 100%);
      }
    }

    .hobby-kayaking {
      background: linear-gradient(135deg, rgba(255, 0, 127, 0.2) 0%, rgba(255, 0, 127, 0.1) 100%);
      border: 2px solid var(--terminal-pink);
      box-shadow: 0 10px 40px rgba(255, 0, 127, 0.3);

      &:hover {
        box-shadow: 0 20px 60px rgba(255, 0, 127, 0.5);
        background: linear-gradient(135deg, rgba(255, 0, 127, 0.3) 0%, rgba(255, 0, 127, 0.2) 100%);
      }
    }

    .hobby-billiards {
      background: linear-gradient(135deg, rgba(147, 51, 234, 0.2) 0%, rgba(147, 51, 234, 0.1) 100%);
      border: 2px solid var(--terminal-purple);
      box-shadow: 0 10px 40px rgba(147, 51, 234, 0.3);

      &:hover {
        box-shadow: 0 20px 60px rgba(147, 51, 234, 0.5);
        background: linear-gradient(135deg, rgba(147, 51, 234, 0.3) 0%, rgba(147, 51, 234, 0.2) 100%);
      }
    }

    .hobby-horror {
      background: linear-gradient(135deg, rgba(0, 255, 255, 0.2) 0%, rgba(255, 0, 127, 0.2) 100%);
      border: 2px solid var(--terminal-cyan);
      box-shadow: 0 10px 40px rgba(0, 255, 255, 0.3);

      &:hover {
        box-shadow: 0 20px 60px rgba(255, 0, 127, 0.5);
        background: linear-gradient(135deg, rgba(0, 255, 255, 0.3) 0%, rgba(255, 0, 127, 0.3) 100%);
      }
    }

    .hobby-title,
    .hobby-description {
      color: white;
    }
  }
</style>
