<style lang="scss">
  /* Editorial Design Styles */
  .section-editorial {
    position: relative;
  }

  .section-parallax {
    position: relative;
    overflow: hidden;
    isolation: isolate;
  }

  .container-wide {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;

    @media (max-width: 768px) {
      padding: 0 1.5rem;
    }
  }

  .editorial-title {
    font-size: clamp(3rem, 10vw, 8rem);
    font-weight: 800;
    line-height: 0.9;
    letter-spacing: -0.03em;
    
    .offset-text {
      padding-left: clamp(2rem, 8vw, 8rem);
      font-weight: 300;
    }
  }

  .button-large {
    padding: 1rem 2rem;
    font-size: 1.125rem;
    font-weight: 600;
  }

  /* Skills animations */
  .animate-skill-card {
    transform: translateY(30px) scale(0.96);
    opacity: 0;
    animation: skillCardIn 0.8s ease-out forwards;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    border: 1px solid transparent;
  }

  .animate-skill-card:hover {
    transform: translateY(-12px) scale(1.03);
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.12);
    border-color: var(--action-color);
  }

  .animate-logo-hover {
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .animate-skill-card:hover .animate-logo-hover {
    transform: scale(1.15) rotate(8deg);
  }

  .animate-icon-pulse {
    animation: iconPulse 2s ease-in-out infinite;
  }

  @keyframes skillCardIn {
    to {
      transform: translateY(0) scale(1);
      opacity: 1;
    }
  }

  @keyframes iconPulse {
    0%,
    100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.1);
    }
  }

  /* FAQ styling */
  .faq-accordion :global(button),
  .faq-accordion :global([role='button']),
  .faq-accordion :global(.accordion-trigger),
  .faq-accordion :global(.accordion-button) {
    font-weight: 700 !important;
    font-size: 1.125rem !important;
    font-family: var(--font-base) !important;
    transition: all 0.3s ease !important;
    
    &:hover {
      transform: translateX(4px);
    }
  }

  .faq-accordion :global(.accordion-panel),
  .faq-accordion :global([role='region']) {
    font-size: 1rem;
    line-height: 1.7;
    opacity: 0.8;
  }

  /* Smooth scroll behavior */
  :global(html) {
    scroll-behavior: smooth;
  }

  /* What I Do List Styles */
  .what-i-do-list {
    display: flex;
    flex-direction: column;
    gap: 4rem;
    max-width: 1200px;
    margin: 0 auto;

    @media (max-width: 768px) {
      gap: 3rem;
    }
  }

  .skill-item {
    display: flex;
    align-items: flex-start;
    gap: 3rem;
    padding: 2rem 0;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    transition: all 0.4s ease;

    &:hover {
      transform: translateX(10px);
      border-color: var(--action-color);
    }

    &:last-child {
      border-bottom: none;
    }

    @media (max-width: 768px) {
      gap: 2rem;
      padding: 1.5rem 0;
    }
  }

  .skill-number {
    font-size: 5rem;
    font-weight: 900;
    line-height: 1;
    opacity: 0.15;
    user-select: none;
    flex-shrink: 0;
    background: linear-gradient(135deg, #3B82F6, #8B5CF6);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    transition: all 0.4s ease;

    @media (max-width: 768px) {
      font-size: 3rem;
    }
  }

  .skill-item:hover .skill-number {
    opacity: 0.3;
    transform: scale(1.1);
  }

  .skill-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .skill-icon {
    width: 3rem;
    height: 3rem;
    color: var(--action-color);
    transition: all 0.4s ease;

    @media (max-width: 768px) {
      width: 2.5rem;
      height: 2.5rem;
    }
  }

  .skill-item:hover .skill-icon {
    transform: scale(1.1) rotate(5deg);
    filter: drop-shadow(0 4px 12px rgba(59, 130, 246, 0.4));
  }

  .skill-title {
    font-size: 2rem;
    font-weight: 700;
    margin: 0;
    line-height: 1.2;

    @media (max-width: 768px) {
      font-size: 1.5rem;
    }
  }

  .skill-description {
    font-size: 1.125rem;
    line-height: 1.7;
    opacity: 0.8;
    margin: 0;

    @media (max-width: 768px) {
      font-size: 1rem;
    }
  }

  /* Retro mode adjustments */
  :global(.retro-mode) {
    .editorial-title {
      color: var(--terminal-cyan);
      text-shadow: 0 0 20px rgba(0, 255, 255, 0.3);
    }

    .skill-item {
      border-color: rgba(0, 255, 255, 0.2);

      &:hover {
        border-color: var(--terminal-cyan);
      }
    }

    .skill-number {
      background: linear-gradient(135deg, var(--terminal-cyan), var(--terminal-pink));
      background-clip: text;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      opacity: 0.2;
    }

    .skill-icon {
      color: var(--terminal-cyan);
    }

    .skill-item:hover .skill-icon {
      filter: drop-shadow(0 0 12px rgba(0, 255, 255, 0.6));
    }

    .skill-title {
      color: var(--terminal-cyan);
    }

    .skill-description {
      color: var(--terminal-cyan);
      opacity: 0.8;
    }

    .animate-skill-card {
      border-color: var(--terminal-cyan);
      background: rgba(0, 255, 255, 0.05);
      
