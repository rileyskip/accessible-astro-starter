---
import DefaultLayout from '@layouts/DefaultLayout.astro'
import Hero from '@components/Hero.astro'
import Feature from '@components/Feature.astro'
import ScrollReveal from '@components/ScrollReveal.astro'
import PrintMark from '@components/PrintMark.astro'
import ParallaxBackground from '@components/ParallaxBackground.astro'
import Counter from '@components/Counter.astro'
import ContentMedia from '@components/ContentMedia.astro'
import ExternalLink from '@components/ExternalLink.astro'
import { Icon } from 'astro-icon/components'
import {
  Accordion,
  AccordionItem,
  Avatar,
  AvatarGroup,
  Tabs,
  TabsList,
  TabsTab,
  TabsPanel,
  Media,
} from 'accessible-astro-components'
---

<DefaultLayout title="Riley Skipper - Web Developer">
  <!-- Grid Overlay for 80s aesthetic -->
  <div class="grid-overlay"></div>

  <Hero />
  <!-- What I Do Section - List Layout -->
  <section class="section-editorial section-parallax my-64 lg:my-96">
    <ParallaxBackground variant="blob" color="blue" position="top-right" size="lg" speed={0.6} />
    <ParallaxBackground variant="circle" color="purple" position="bottom-left" size="md" speed={0.4} />
    
    <div class="container-wide relative z-10">
      <div class="relative mb-24 lg:mb-32">
        <PrintMark position="top-left" size="lg" />
        <ScrollReveal direction="fade">
          <h2 class="editorial-title">
            <span class="block">What</span>
            <span class="block offset-text">I Do</span>
          </h2>
        </ScrollReveal>
      </div>

      <div class="what-i-do-list">
        <ScrollReveal direction="right" delay={100}>
          <div class="skill-item">
            <div class="skill-number">01</div>
            <div class="skill-content">
              <Icon name="lucide:accessibility" class="skill-icon" />
              <h3 class="skill-title">Accessible Design</h3>
              <p class="skill-description">
                I believe the web should be for everyone. Every project I build follows WCAG guidelines and accessibility best
                practices to ensure inclusive experiences.
              </p>
            </div>
          </div>
        </ScrollReveal>

        <ScrollReveal direction="left" delay={200}>
          <div class="skill-item">
            <div class="skill-number">02</div>
            <div class="skill-content">
              <Icon name="lucide:code" class="skill-icon" />
              <h3 class="skill-title">Modern Development</h3>
              <p class="skill-description">
                I build with cutting-edge technologies like React, TypeScript, and Astro to create fast, scalable, and
                maintainable web applications.
              </p>
            </div>
          </div>
        </ScrollReveal>

        <ScrollReveal direction="right" delay={300}>
          <div class="skill-item">
            <div class="skill-content">
              <Icon name="lucide:palette" class="skill-icon" />
              <h3 class="skill-title">Beautiful UI/UX</h3>
              <p class="skill-description">
                Creating intuitive and visually appealing interfaces that users love to interact with. Design that works for
                everyone.
              </p>
            </div>
            <div class="skill-number">03</div>
          </div>
        </ScrollReveal>

        <ScrollReveal direction="left" delay={400}>
          <div class="skill-item">
            <div class="skill-content">
              <Icon name="lucide:zap" class="skill-icon" />
              <h3 class="skill-title">Performance</h3>
              <p class="skill-description">
                Fast loading times and smooth interactions are non-negotiable. I optimize every project for speed and
                efficiency.
              </p>
            </div>
            <div class="skill-number">04</div>
          </div>
        </ScrollReveal>

        <ScrollReveal direction="right" delay={500}>
          <div class="skill-item">
            <div class="skill-number">05</div>
            <div class="skill-content">
              <Icon name="lucide:users" class="skill-icon" />
              <h3 class="skill-title">User-Centered</h3>
              <p class="skill-description">
                Every decision is made with the user in mind. I research, test, and iterate to create the best possible
                experience.
              </p>
            </div>
          </div>
        </ScrollReveal>

        <ScrollReveal direction="left" delay={600}>
          <div class="skill-item">
            <div class="skill-content">
              <Icon name="lucide:heart" class="skill-icon" />
              <h3 class="skill-title">Passionate</h3>
              <p class="skill-description">
                I love what I do and it shows in my work. I'm always learning, growing, and pushing the boundaries of what's
                possible on the web.
              </p>
            </div>
            <div class="skill-number">06</div>
          </div>
        </ScrollReveal>
      </div>
    </div>
  </section>

  <!-- FAQ Section - Disjointed Layout -->
  <section class="section-editorial section-parallax my-64 lg:my-96">
    <ParallaxBackground variant="gradient" color="cyan" position="top-left" size="xl" speed={0.3} />
    <ParallaxBackground variant="dots" color="pink" position="bottom-right" size="md" speed={0.5} />
    
    <div class="container-wide relative z-10">
      <div class="grid grid-cols-1 gap-16 lg:grid-cols-12 lg:gap-24">
        <ScrollReveal direction="left" class="lg:col-span-5 lg:col-start-2">
          <div class="relative">
            <PrintMark position="top-right" size="md" />
            <div class="sticky top-32 flex flex-col items-start gap-6">
              <h2 class="editorial-title">
                <span class="block">Frequently</span>
                <span class="block offset-text">Asked</span>
              </h2>
              <p class="text-xl lg:text-2xl opacity-70">
                Common questions about my work, process, and how we can collaborate on your next project.
              </p>
              <a class="button button-large mt-4" href="/contact">Get in touch</a>
            </div>
          </div>
        </ScrollReveal>
        
        <ScrollReveal direction="right" delay={200} class="lg:col-span-5">
          <div class="space-content">
            <Accordion class="faq-accordion">
              <AccordionItem name="exclusive" title="What's your development process?" open>
                <p>
                  I follow a user-centered approach: research and discovery, design and prototyping, development with
                  accessibility in mind, thorough testing, and ongoing support. Each phase includes client feedback to
                  ensure we're building exactly what you need.
                </p>
              </AccordionItem>
              <AccordionItem name="exclusive" title="How do you ensure accessibility?">
                <p>
                  I build accessibility into every project from the start using semantic HTML, proper ARIA labels, keyboard
                  navigation, and screen reader testing. All projects meet WCAG 2.2 AA standards and are tested with
                  assistive technologies.
                </p>
              </AccordionItem>
              <AccordionItem name="exclusive" title="What technologies do you use?">
                <p>
                  I work with modern web technologies including React, TypeScript, Astro, Next.js, and various CSS
                  frameworks. I choose the best tools for each project based on requirements, performance needs, and
                  maintainability.
                </p>
              </AccordionItem>
              <AccordionItem name="exclusive" title="Do you provide ongoing support?">
                <p>
                  Yes! I offer ongoing maintenance, updates, and support for all projects. I believe in building long-term
                  relationships with clients and ensuring your website continues to perform well and meet your evolving
                  needs.
                </p>
              </AccordionItem>
              <AccordionItem name="exclusive" title="How do you handle project communication?">
                <p>
                  Clear communication is key to successful projects. I provide regular updates, use project management tools
                  for transparency, and am always available to answer questions. I believe in keeping you informed every
                  step of the way.
                </p>
              </AccordionItem>
            </Accordion>
          </div>
        </ScrollReveal>
      </div>
    </div>
  </section>
  <!-- Skills Section - Grid Layout -->
  <section class="section-editorial section-parallax my-64 lg:my-96">
    <ParallaxBackground variant="blob" color="purple" position="top-left" size="lg" speed={0.4} />
    <ParallaxBackground variant="grid" color="blue" position="bottom-right" size="xl" speed={0.3} />
    <ParallaxBackground variant="circle" color="cyan" position="center" size="md" speed={0.2} />
    
    <div class="container-wide relative z-10">
      <div class="relative mb-24">
        <PrintMark position="bottom-right" size="lg" />
        <ScrollReveal direction="fade">
          <h2 class="editorial-title text-center">
            <span class="block">Skills &</span>
            <span class="block offset-text">Technologies</span>
          </h2>
          <p class="mx-auto mt-8 max-w-3xl text-center text-xl opacity-70 lg:text-2xl">
            I'm constantly learning and expanding my skill set to deliver the best possible solutions for my clients.
          </p>
        </ScrollReveal>
      </div>
      <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
        <div class="bg-card animate-skill-card rounded-2xl p-6 text-center" style="animation-delay: 0.1s">
          <img
            src="https://www.drupal.org/files/Wordmark_blue_RGB.png"
            alt="Drupal"
            class="animate-logo-hover mx-auto mb-4 h-12 w-auto"
          />
          <h3 class="mb-2 text-xl font-bold">Drupal 9 & 10</h3>
          <p class="text-muted text-sm">CMS Development</p>
        </div>
        <div class="bg-card animate-skill-card rounded-2xl p-6 text-center" style="animation-delay: 0.2s">
          <img
            src="https://s.w.org/style/images/about/WordPress-logotype-standard.png"
            alt="WordPress"
            class="animate-logo-hover mx-auto mb-4 h-12 w-auto"
          />
          <h3 class="mb-2 text-xl font-bold">WordPress</h3>
          <p class="text-muted text-sm">Content Management</p>
        </div>
        <div class="bg-card animate-skill-card rounded-2xl p-6 text-center" style="animation-delay: 0.3s">
          <img
            src="https://www.w3.org/html/logo/downloads/HTML5_Logo_512.png"
            alt="HTML5"
            class="animate-logo-hover mx-auto mb-4 h-12 w-auto"
