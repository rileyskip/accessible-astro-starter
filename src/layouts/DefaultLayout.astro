---
import type { ImageMetadata } from 'astro'
import { ViewTransitions } from 'astro:transitions'
import { getImage } from 'astro:assets'
import Header from '@components/Header.astro'
import '../styles/tailwind.css'
import '../assets/scss/index.scss'

export interface Props {
  title?: string
  description?: string
  author?: string
  image?: ImageMetadata
  canonicalURL?: URL
  type?: string
}

const {
  title = 'Riley Skipper - Web Developer',
  description = 'Web developer specializing in accessible, modern websites. Creating inclusive digital experiences with React, TypeScript, and Astro.',
  author = 'Riley Skipper',
  image,
  canonicalURL = Astro.url,
  type = 'website',
}: Props = Astro.props

const ogImage = image ? await getImage({ src: image, alt: title }) : undefined
---

<!doctype html>
<html lang="en" dir="ltr" class="modern-mode">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    {ogImage && <meta property="og:image" content={ogImage.src} />}
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    {ogImage && <meta name="twitter:image" content={ogImage.src} />}
    <title>{title}</title>
    <ViewTransitions />
    <script is:inline>
      // Initialize theme based on page and localStorage
      function initTheme() {
        const isHomePage = window.location.pathname === '/'
        
        // Non-home pages always use modern mode
        if (!isHomePage) {
          document.documentElement.classList.add('modern-mode')
          document.documentElement.classList.remove('retro-mode')
        } else {
          // Home page: check if retro mode is explicitly enabled
          if (localStorage.getItem('retro-mode') === 'true') {
            document.documentElement.classList.add('retro-mode')
            document.documentElement.classList.remove('modern-mode')
          } else {
            document.documentElement.classList.add('modern-mode')
            document.documentElement.classList.remove('retro-mode')
          }
        }
      }

      // Run on initial load
      initTheme()

      // Re-run on view transitions
      document.addEventListener('astro:after-swap', initTheme)
    </script>
  </head>
  <body>
    <Header />
    <main id="main-content">
      <slot />
    </main>
    <script src="/src/assets/js/animations.js"></script>
  </body>
</html>
